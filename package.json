{
  "name": "tiptap-community-pages",
  "version": "0.1.1",
  "private": false,
  "description": "Community Tiptap Pagination Extension for legal document editing",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./extensions": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./react": {
      "types": "./dist/react.d.ts",
      "import": "./dist/react.mjs",
      "require": "./dist/react.cjs"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "build:lib": "tsup && node scripts/copy-styles.mjs",
    "prepack": "npm run build:lib",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:smoke": "playwright test e2e/smoke.spec.ts"
  },
  "peerDependencies": {
    "@tiptap/core": ">=3.0.0 <4.0.0",
    "@tiptap/pm": ">=3.0.0 <4.0.0",
    "@tiptap/react": ">=3.0.0 <4.0.0",
    "@tiptap/starter-kit": ">=3.0.0 <4.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    },
    "@tiptap/react": {
      "optional": true
    },
    "@tiptap/starter-kit": {
      "optional": true
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@playwright/test": "^1.50.1",
    "@tiptap/core": "^3.13.0",
    "@tiptap/extension-document": "^3.13.0",
    "@tiptap/extension-paragraph": "^3.13.0",
    "@tiptap/extension-text": "^3.13.0",
    "@tiptap/pm": "^3.13.0",
    "@tiptap/react": "^3.13.0",
    "@tiptap/starter-kit": "^3.13.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.10.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.16.0",
    "eslint-config-next": "^15.1.0",
    "jsdom": "^27.3.0",
    "next": "^15.1.0",
    "postcss": "^8.4.49",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^3.4.16",
    "tsup": "^8.5.0",
    "typescript": "^5.7.2",
    "vitest": "^4.0.15"
  },
  "keywords": [
    "tiptap",
    "prosemirror",
    "pagination",
    "pages",
    "legal",
    "editor"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aurelien64/tiptap-community-pages.git"
  },
  "bugs": {
    "url": "https://github.com/aurelien64/tiptap-community-pages/issues"
  },
  "homepage": "https://github.com/aurelien64/tiptap-community-pages#readme",
  "license": "MIT"
}
